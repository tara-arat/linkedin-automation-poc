# LinkedIn Credentials
# REQUIRED: Your LinkedIn account email
LINKEDIN_EMAIL=your-email@example.com

# REQUIRED: Your LinkedIn account password
LINKEDIN_PASSWORD=your-password-here

# Optional: Path to store session cookies (default: ./sessions)
LINKEDIN_SESSION_PATH=./sessions

# Database Configuration
# Optional: Path to SQLite database file (default: ./data/automation.db)
DATABASE_PATH=./data/automation.db

# Logging Configuration
# Optional: Log level - debug, info, warn, error (default: info)
LOG_LEVEL=info

# Optional: Log output path (default: ./logs/automation.log)
LOG_OUTPUT_PATH=./logs/automation.log

# Configuration File
# Optional: Path to YAML configuration file (default: ./config.yaml)
CONFIG_FILE=./config.yaml
